params:
  package: string | array string    # package parameter may either be a String or an Array(String)

imports:
  os: ../../os
...

case os()
in {base_os: /arch/}
  puts "remove arch"
in {base_os: /debian|ubuntu/}
  debian(package: params.package)
in {base_os: /fedora/}
  puts "remove fedora"
else
  puts "unknown"
end
